{% extends 'base.html.twig' %}

{% block title %}{{ user.name }}{% endblock %}
{% block my_title %}Edit Your Account{% endblock %}

{% block body %}
<div class="card shadow-sm mx-auto">
    <div class="card-body">
    {{ form_start(form) }}
        <div class="row">
            <div class="col-md-4">
                {{ form_row(form.name) }}
            </div>
            <div class="col-md-4">
                {{ form_row(form.email) }}
            </div>
            <div class="col-md-4">
                {{ form_row(form.image) }}
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                {{ form_row(form.plainPassword.first) }}
            </div>
            <div class="col-md-6">
                {{ form_row(form.plainPassword.second) }}
            </div>
        </div>

        <button type="submit" class="btn btn-outline-primary">Register</button>
    {{ form_end(form) }}
    </div>
</div>
{% endblock %}
